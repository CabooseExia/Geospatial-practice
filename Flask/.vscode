{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Flask Backend",
      "type": "shell",
      "command": ".\\backend\\venv\\Scripts\\python.exe",
      "args": ["app.py"],
      "options": {
        "cwd": "${workspaceFolder}/Flask/Backend"
      },
      "group": "build"
    },
    {
      "label": "Run React Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/Flask/Frontend"
      },
      "group": "build"
    }
  ]
}
